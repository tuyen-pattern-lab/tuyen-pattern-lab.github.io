<div class="{{styleModifier}}">
  <label class="form-label">{{label}}</label>
  {{#each radios }}
  <div class="form-check">
    <input class="form-check-input" type="radio" name="{{name}}" id="{{id}}" {{#if checked}}checked{{/if}} {{#if disabled}}disabled{{/if}}>
    <label class="form-check-label" for="{{id}}">
      {{label}}
    </label>
  </div>
  {{/each}}
</div>